<h1>hotpepper居酒屋一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>住所</th>
      <th>電話番号</th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>
